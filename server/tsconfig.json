{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "types": ["node"],
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules/**/*", "dist"]
}