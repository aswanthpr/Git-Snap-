{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "types": ["node"],
    // "baseUrl": "./sr",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules/**/*", "dist"]
}